{% extends 'base.jinja' %}{% block content %}
    <h1>{{ title }}</h1>
    <form action="/events" method="post">
    <label for="name">Event Name:</label>
    <input type="text" id="name" name="name">

    <label for="date_of_event">Date:</label>
    <input type="date" name="date" id="date_of_event">

    <label for="location">Location:</label>
    <input type="text" id="location" name="location">

    <label for="num_of_guests">Number of Guests:</label>
    <input type="number" name="num_of_guests" id="num_of_guests">

    <label for="description">Description:</label>
    <textarea name="description" id="description" cols="30" rows="10"></textarea>

    <input type="submit" value="Save">
  
  </form>
    <ul>
    {% for events in event_list%}
        <li>{{ events.name }} {{ events.date }}</li>            
    {% endfor %}
    </ul>
{% endblock content %}